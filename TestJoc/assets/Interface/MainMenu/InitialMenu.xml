<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    
    <screen id="start" controller="menu.MenuPrincipal" >
        <layer id="background" childLayout="center">
            <image filename="Interface/MainMenu/selectBackground.jpg" height="100%" width="100%"></image>
        </layer>

        <layer id="foreground" childLayout="vertical">
            <panel id="panelStart" height="60%" width="100%" childLayout="horizontal" paddingTop="100px" paddingLeft="100px" paddingRight="100px">              
                <image id="panelStart" name="panelStart" filename="Interface/MainMenu/start.png" height="100%" width="100%" align="center" valign="center">
                   <interact onClick="newGame()"/>
                   <effect>
                       <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
                       <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
                       <onHover name="changeImage" active="Interface/MainMenu/start_on_hover.png" inactive="Interface/MainMenu/start.png" />
                   </effect>
                </image>
            </panel>

            <panel id="panelExit" height="30%" width="100%" childLayout="center" valign="bottom" paddingTop="20px" paddingRight="20px">  
                <image id="exitB" name="exitB" filename="Interface/MainMenu/exit.png" height="70%" width="30%" align="right" valign="bottom" >
                    <interact onClick="exit()"/>
                    <effect>
                        <onStartScreen name="move" mode="in" direction="bottom" length="300" startDelay="0" inherit="true"/>
                        <onEndScreen name="move" mode="out" direction="top" length="300" startDelay="0" inherit="true"/>
                        <onHover name="changeImage" active="Interface/MainMenu/exit_on_hover.png" inactive="Interface/MainMenu/exit.png" />
                    </effect>
                </image>
            </panel>
        </layer>
    </screen>
  
    <screen id="choosePlayer" controller="menu.MenuPrincipal">    
        <layer id="background" childLayout="center">
            <image filename="Interface/MainMenu/selectBackground.jpg" height="100%" width="100%"></image>
        </layer>

        <layer id="background" childLayout="vertical">
            <image filename="Interface/PlayersMenu/fondoPlayer.png" height="70%" width="40%" align="center" ></image>
        </layer>


        <layer id="foreground" childLayout="vertical">
            <panel id="panelPersonaje" height="60%" width="70%" childLayout="horizontal" align="center">              
                <panel id="panel_izq" height="100%" width="20%" align="left" childLayout="center" paddingLeft="50px">
                    <image id="prevImage" name="prevImage" filename="Interface/PlayersMenu/menuPrev.png" height="40%" width="100%">
                        <interact onClick="prevPerson()" />
                        <effect>
                            <onStartScreen name="move" mode="in" direction="left" length="300" startDelay="0" inherit="true"/>
                            <onEndScreen name="move" mode="out" direction="left" length="300" startDelay="0" inherit="true"/>    
                            <onHover name="changeImage" active="Interface/PlayersMenu/menuPrev_on_hover.png" inactive="Interface/PlayersMenu/menuPrev.png" />
                        </effect>
                    </image>
                </panel>

                <panel id="panel_imagen" height="100%" width="60%" align="center" childLayout="center">       
                    <image id="personImage" name="personImage" filename="${CALL.getPlayerImage()}" height="90%" width="60%">
                        <effect>
                            <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
                            <onEndScreen name="move" mode="out" direction="top" length="300" startDelay="0" inherit="true"/>    
                        </effect>
                    </image>
                </panel> 

                <panel id="panel_dch" height="100%" width="20%" align="right" childLayout="center" paddingRight="50px">       
                    <image id="nextImage" name="nextImage" filename="Interface/PlayersMenu/menuNext.png" height="40%" width="100%">
                        <interact onClick="nextPerson()" />
                        <effect>
                            <onStartScreen name="move" mode="in" direction="right" length="300" startDelay="0" inherit="true"/>
                            <onEndScreen name="move" mode="out" direction="right" length="300" startDelay="0" inherit="true"/>
                            <onHover name="changeImage" active="Interface/PlayersMenu/menuNext_on_hover.png" inactive="Interface/PlayersMenu/menuNext.png" />  
                        </effect>
                    </image>
                </panel>         
            </panel>
         
         
            <panel id="panelAceptar" height="40%" width="100%" childLayout="center" valign="bottom" paddingRight="20px" paddingBottom="20px">  
                <image id="aceptarB" name="aceptarB" filename="Interface/MainMenu/start.png" height="30%" width="30%" align="right" valign="bottom" >
                    <interact onClick="acceptChoosePlayer()" />
                    <effect>
                        <onStartScreen name="move" mode="in" direction="bottom" length="300" startDelay="0" inherit="true"/>
                        <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/> 
                        <onHover name="changeImage" active="Interface/MainMenu/start_on_hover.png" inactive="Interface/MainMenu/start.png" />   
                    </effect>
                </image>
                
            </panel>
           
        </layer>     
                    
    </screen>
    
    <screen id="ipConfig" controller="menu.MenuPrincipal">
        <layer id="background" childLayout="center">
            <image filename="Interface/MainMenu/selectBackground.jpg" height="100%" width="100%"></image>
        </layer>
        
        <layer childLayout="center">
            
            <panel width="80%" height="25%" align="center" valign="center" childLayout="vertical" backgroundColor="#55a5" padding="10">
                <control name="label" text="Client Config" />
                <panel height="21px" childLayout="horizontal">
                    <control name="label" text="Client Name: " />
                    <control id="server" width="230px" name="textfield" text="App Server"/>
                </panel>

                <panel height="21px" childLayout="horizontal"/>

                <panel height="21px" childLayout="horizontal">
                    <control name="label" text="IP: " />
                    <control id="serverIP" width="100px" name="textfield" text="127.0.0.1"/>
                </panel>
            </panel>
        </layer>
        <layer childLayout="center">
            <panel id="panelAceptar" height="40%" width="100%" childLayout="center" valign="bottom" paddingRight="20px" paddingBottom="20px">  
                <image id="aceptarB" name="aceptarB" filename="Interface/MainMenu/next.png" height="30%" width="20%" align="right" valign="bottom" >
                    <interact onClick="choosePlayer()" />
                    <effect>
                        <onStartScreen name="move" mode="in" direction="bottom" length="300" startDelay="0" inherit="true"/>
                        <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/> 
                        <onHover name="changeImage" active="Interface/MainMenu/next_on_hover.png" inactive="Interface/MainMenu/next.png" />   
                    </effect>
                </image>
                
            </panel>
            
        </layer>
    </screen>
    
    <popup id="pausePopup" controller="menu.MenuPrincipal" childLayout="center" backgroundColor="#000a" >
        <panel width="100%" height="100%" childLayout="vertical" paddingLeft="30px" paddingRight="30px" paddingTop="30px" paddingBottom="30px">
            <panel id="panelStart" height="60%" width="100%" childLayout="horizontal" paddingTop="0px" paddingLeft="100px" paddingRight="100px">              
                <image id="panelStart" name="panelStart" filename="Interface/MainMenu/continue.png" height="100%" width="100%" align="center" valign="center">
                   <interact onClick="goToGame()"/>
                   <effect>
                       <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
                       <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
                       <onHover name="changeImage" active="Interface/MainMenu/continue_on_hover.png" inactive="Interface/MainMenu/continue.png" />
                   </effect>
                </image>
            </panel>

            <panel id="panelExit" height="30%" width="100%" childLayout="horizontal" valign="bottom" paddingTop="20px" paddingRight="20px">  
                <image id="exitB" name="exitB" filename="Interface/MainMenu/exit.png" height="70%" width="30%" align="right" valign="bottom" >
                    <interact onClick="exit()"/>
                    <effect>
                        <onStartScreen name="move" mode="in" direction="bottom" length="300" startDelay="0" inherit="true"/>
                        <onEndScreen name="move" mode="out" direction="top" length="300" startDelay="0" inherit="true"/>
                        <onHover name="changeImage" active="Interface/MainMenu/exit_on_hover.png" inactive="Interface/MainMenu/exit.png" />
                    </effect>
                </image>
            </panel>
        </panel>
    </popup> 
 
    <screen id="end">

    </screen>

</nifty>

    